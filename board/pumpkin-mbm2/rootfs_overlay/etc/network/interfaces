auto lo
iface lo inet loopback

# Default ethernet configuration
# Update the 'address' value to set a custom static IP
auto eth0
iface eth0 inet static
    address 200.1.1.105
    netmask 255.255.0.0
    hwaddress ether 3c:18:a0:07:eb:31
    post-up /etc/network/if-up.d/arp_sparcam.sh

